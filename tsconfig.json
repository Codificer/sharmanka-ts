{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationDir": ".",
        "module": "esnext",
        "target": "es6",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
